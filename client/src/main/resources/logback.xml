<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} [%-4level] [%logger{0}] - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.apache.sshd" level="DEBUG"/>

    <logger name="org.h2" level="DEBUG"/>

    <logger name="com.vectura" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>